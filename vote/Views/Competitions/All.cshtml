                            }
                            @if (ViewBag.Competition[ViewBag.CompetitionCount - (ViewBag.CompetitionCount % 3) + i].Place == "Могилев")
                            {
                                <img src="@Url.Content("~/Content/img/mogilevLogo.png")" class="img-thumbnail center-block" width="100" height="100" />
